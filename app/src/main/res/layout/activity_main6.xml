<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:adjustViewBounds="true"
        android:background="@drawable/barber6"
        tools:context=".Main6Activity">

<ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               >

            <TextView
                android:id="@+id/prof"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="PROFISSIONAL"
                android:textColor="#fff"/>
            <ImageView
                    android:id="@+id/img_prof1"
                    android:layout_marginTop="5dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="65dp"
                    android:layout_marginLeft="65dp"
                    android:adjustViewBounds="true"
                    />

            <ImageView
                    android:id="@+id/img_prof2"
                    android:layout_marginTop="5dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="65dp"
                    android:layout_marginRight="65dp"
                    />

            <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="80dp"
                    android:orientation="horizontal">

                <RadioButton
                        android:id="@+id/prof1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:text="profis 1"
                    android:textSize="20dp"
                        android:textColor="#7cfc00" />

                <RadioButton
                        android:id="@+id/prof2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="100dp"
                        android:layout_marginLeft="100dp"
                        android:background="@android:color/transparent"
                        android:text="profis 2"
                    android:textSize="20dp"
                        android:textColor="#7cfc00" />
            </RadioGroup>

            <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <RadioButton
                        android:id="@+id/servico1"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="140dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:gravity="center"
                        android:text="servico 1"
                        android:textSize="20dp"
                        android:textColor="#fff"
                    android:textStyle="bold"
                    />

                <RadioButton
                        android:id="@+id/servico2"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:gravity="center"
                        android:text="servico 2"
                    android:textSize="20dp"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent" />

                <RadioButton
                        android:id="@+id/servico3"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:gravity="center"
                        android:text="servico 3"
                    android:textSize="20dp"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent" />

                <RadioButton
                        android:id="@+id/servico4"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:gravity="center"
                        android:text="servico 4"
                    android:textSize="20dp"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent" />

                <RadioButton
                        android:id="@+id/servico5"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:gravity="center"
                        android:text="servico 5"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="#fff"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent" />
            </RadioGroup>

            <TextView
                    android:id="@+id/preco1"
                    android:layout_width="64dp"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="140dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginRight="4dp"
                    android:gravity="center"
                    android:text="sem conexao"
                    android:textColor="#7cfc00"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            <TextView
            android:text="sem conexao"
            android:layout_width="64dp"
            android:layout_height="40dp"
            android:textColor="#7cfc00"
            android:gravity="center"
            android:id="@+id/preco2" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="7dp"
            android:layout_marginRight="7dp" android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" android:layout_marginTop="30dp" android:layout_below="@+id/preco1"/>
    <TextView
            android:text="sem conexao"
            android:textColor="#7cfc00"
            android:layout_width="64dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:id="@+id/preco3"
            android:layout_marginTop="35dp"
            android:layout_marginRight="4dp"
            tools:ignore="MissingConstraints"
            android:layout_below="@+id/preco2" android:layout_marginEnd="4dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"/>
            <TextView
                    android:text="sem conexao"
                    android:textColor="#7cfc00"
                    android:layout_width="64dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:id="@+id/preco4"
                    android:layout_marginTop="35dp"
                    android:layout_marginRight="4dp"
                    tools:ignore="MissingConstraints"
                    android:layout_below="@+id/preco3" android:layout_marginEnd="4dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"/>
            android:layout_alignParentRight="true" android:layout_marginTop="50dp" android:layout_below="@+id/preco1"/>
            <TextView
                    android:text="sem conexao"
                    android:textColor="#7cfc00"
                    android:layout_width="64dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:id="@+id/preco5"
                    android:layout_marginTop="35dp"
                    android:layout_marginRight="4dp"
                    tools:ignore="MissingConstraints"
                    android:layout_below="@+id/preco4" android:layout_marginEnd="4dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"/>

            <TextView
                    android:id="@+id/profissional"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:layout_below="@+id/preco5"
                    android:background="@android:color/transparent"
                    android:textColor="#fff" />

            <Button
                android:id="@+id/avancar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/profissional"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="2dp"
                android:textSize="18dp"
                android:background="@android:color/transparent"
                android:textColor="#fff" />

        </RelativeLayout>
</ScrollView>
    </RelativeLayout>

