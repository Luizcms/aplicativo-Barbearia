<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context=".Main2Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/barbf1" />

            <Button
                android:id="@+id/agendar"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/imageView"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginBottom="0dp"
                android:background="@drawable/botaotab"
                android:text="AGENDAR"
                android:textColor="#7cfc00"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@+id/agendar"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="30dp"
                android:text="Uma barbearia com um espaÃ§o acolhedor, extremamente organizada e formada por profissionais especializados. "
                android:textAlignment="center"
                android:textColor="#ffff"
                android:textSize="18sp" />

           <androidx.recyclerview.widget.RecyclerView
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:id="@+id/myrecycler"
               android:layout_below="@+id/textView5"/>
            <RelativeLayout
                android:layout_below="@+id/myrecycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                android:id="@+id/descricao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:textColor="#ffff"
                android:textSize="18sp" />

            <Button
                android:id="@+id/endereco"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="100dp"
                android:layout_below="@id/descricao"
                android:layout_marginTop="30dp"
                android:background="@drawable/ic_local"
                android:layout_marginLeft="100dp" />

            <Button
                android:id="@+id/contato"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="100dp"
                android:layout_marginRight="100dp"
                android:layout_below="@id/descricao"
                android:layout_marginTop="30dp"
                android:background="@drawable/whats"
               />

            <Button
                android:id="@+id/faceb"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_below="@id/descricao"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/face"
                android:textSize="10sp" />

            <Button
                android:id="@+id/instagram"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_below="@id/descricao"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/instag"
                android:textSize="10sp"
                tools:ignore="UnknownId" />

            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>



</LinearLayout>